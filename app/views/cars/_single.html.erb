<%# resource_cache(resource) do %>
 
<article class="container single-product"> 
  <div class="page-header">
    <h1><%= resource.title %></h1>
    <div class="pull-right">
      <%= link_to(t("custom.back_to_fleet"), parent.public_url, :class => "btn btn-default") %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= render_slideshow_for(resource) %> 
    </div>
    <div class="col-xs-12 col-sm-6">
      <%= render_copy_text(resource.body) %>
      <h4><%= raw "#{t('custom.specifications')}&nbsp;:" %></h4>
      <%= render_copy_text(resource.specifications) %>
      <h4><%= raw "#{t('custom.rates')}&nbsp;:" %></h4>
      <table class="table">
        <tr>
          <td><%= raw "#{t('custom.season_one')}&nbsp;:" %></td>
          <td><%= raw "#{resource.season_one_price_per_day}$ / #{t('custom.per_day')}" %></td>
          <td><%= raw "#{resource.season_one_price_per_week}$ / #{t('custom.per_week')}" %></td>
        </tr>
        <tr>
          <td><%= raw "#{t('custom.season_two')}&nbsp;:" %></td>
          <td><%= raw "#{resource.season_two_price_per_day}$ / #{t('custom.per_day')}" %></td>
          <td><%= raw "#{resource.season_two_price_per_week}$ / #{t('custom.per_week')}" %></td>
        </tr>
        <tr>
          <td><%= raw "#{t('custom.season_three')}&nbsp;:" %></td>
          <td><%= raw "#{resource.season_three_price_per_day}$ / #{t('custom.per_day')}" %></td>
          <td><%= raw "#{resource.season_three_price_per_week}$ / #{t('custom.per_week')}" %></td>
        </tr>
        <tr>
          <td><%= raw "#{t('custom.insurance')}&nbsp;:" %></td>
          <td><%= raw "#{resource.insurance_price_per_day}$ / #{t('custom.per_day')}" %></td>
          <td><%= raw "#{resource.insurance_price_per_week}$ / #{t('custom.per_week')}" %></td>
        </tr>
      </table>
      <%= link_to(t("custom.reserve"), reservations_path, :class => "btn btn-primary btn-large btn-block") %>
    </div> 
  </div>
</article>
<%# end %>

