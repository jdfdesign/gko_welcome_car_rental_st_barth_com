<%# cache([site, I18n.locale, 'footer']) do %>
<% @contact_page = site.sections.named("contact") %> 
<section id="footer" class="section contact-section">
  <div class="container">
    <div class="page-header">
      <h1><%= @contact_page.title if @contact_page %></h1>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-4"> 
        <%= render_copy_text(@contact_page.body) if @contact_page %>
      </div>
      <div class="col-xs-12 col-sm-8">
        <form id="contact-form" action="/inquiries" method="post" data-remote="true">
           <input type="text" name="inquiry[ghost]" id="inquiry_ghost" value="" class="form-control hide"> 
           <div class="row">	
            <div class="col-xs-12 col-sm-6 form-group">
              <input type="text" name="inquiry[name]" id="inquiry_name" value="" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.name') %>">
            </div>
            <div class="col-xs-12 col-sm-6 form-group">
              <input type="text" name="inquiry[email]" id="inquiry_email" value="" class="form-control required email" placeholder="<%= t('simple_form.labels.inquiry.email') %>">
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 form-group">
              <textarea name="inquiry[message]" id="inquiry_message" rows="20" cols="30" class="form-control required" placeholder="<%= t('simple_form.labels.inquiry.message') %>"></textarea>
            </div>
            <div class="col-xs-12 form-group">
              <input type="hidden" name="submitted" id="submitted" class="button" value="SEND"><button id="submit" class="btn btn-primary" type="submit"><%= t("gko.inquiry_submit") %></button>
            </div>
            <div class="col-xs-12 form-group">
              <p id="error" data-alert="" class="alert alert-danger"><%= t("gko.inquiry_error") %></p>
              <p id="thanks" data-alert="" class="alert alert-success"><%= t("gko.inquiry_thanks") %></p>
              <p id="timedout" data-alert="" class="alert alert-danger"><%= t("gko.inquiry_connection_time_out") %></p>
              <p id="state" data-alert="" class="alert"></p>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>  
</section>

<!-- START COPYRIGHT -->
<section id="copyright">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 text-left">
        <%= render_menu('pipe') %>
      </div>
      <div class="col-xs-6 text-right">
        <p><small>@ Copyright. All Rights Reserved. Created by <a href="http://www.joufdesign.com">Jouf Design.</a></small></p>
      </div>
    </div>
  </div>
</section>
<!-- END COPYRIGHT -->
<%# end %>