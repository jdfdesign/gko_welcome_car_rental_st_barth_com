<%# cache([site, I18n.locale, 'header']) do %>
<!-- Header
================================================== -->
<div class="topbar hidden-print">
  <div class="container">
    <%= link_to(t("custom.promo"), "#footer", :class => "pull-left") %>
    <%= render "locales_select" %>
  </div>
</div>
<header class="navbar navbar-default hidden-print">
  <div class="container">
    <div class="navbar-header">
      <%= link_to(image_tag("logo.png"), root_url, :alt => site.title, :class => "navbar-brand") %>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <nav class="collapse navbar-collapse">
      <%= render 'menu', :sections => site.primary_menu, :menu_name => 'navbar-nav navbar-right' %>
    </nav>
    
  </div>
</header>
<%# end %>